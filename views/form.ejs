<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>NAU Ski & Snowboard</title>
        
        <!-- Latest compiled and minified Bootstrap CSS -->
        <link rel="stylesheet" href="/stylesheets/bootstrap-3.3.7-dist/css/bootstrap.min.css">
        
        <!-- Google Fonts -->
        <!--<link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">-->
        <link href="https://fonts.googleapis.com/css?family=Oswald:300,400" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Raleway:300,500" rel="stylesheet">
        
        <!-- Custom CSS -->
        <link rel="stylesheet" type="text/css" href="/stylesheets/app.css">
        
        <!-- favicon -->
        <link rel="icon" href="../img/logo.png">
    </head>
    <body class="form-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div id="form-title">
                        <h1>Add an Event</h1>
                        <hr>
                    </div>
                </div>
                
                <div class="col-sm-12">
                    <form action="/events" method="POST">
                        <div class="form-group">
                            <label for="eName">Event Name</label>
                            <input type="text" name="event[eventName]" class="form-control" id="eName" placeholder="Event Name">
                        </div>
                        <div class="form-group">
                            <label for="eventDate">Event Date</label>
                            <input type="date" name="event[date]" class="form-control" id="eventDate">
                        </div>
                        <input type="checkbox" onclick="dateShow(this)" id="addEndDate">
                        <label for="addEndDate">Add End Date</label>
                        <span id="endDateSection"></span>
                        <div class="form-group">
                            <label for="eventLocation">Location</label>
                            <input type="text" name="event[loc]" class="form-control" id="eventLocation" placeholder="i.e. Mammoth">
                        </div>
                        <input type="checkbox" onclick="dayShow(this)" id="addDay">
                        <label for="addDay">Add Day Description</label>
                        <span id="daySection"></span>
                        <span id="addButton"></span>
                        <input type="submit" id="submitbtn">
                        <button type="button" id="backbtn"><a href="/events">Go Back to Event Page</a></button>
                    </form>                    
                </div>
            </div>
        </div>
<% include ./partials/footer%>